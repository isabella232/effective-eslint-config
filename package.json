{
  "name": "@effective/eslint-config",
  "version": "0.8.0",
  "description": "ESLint Configuration for Effective Project",
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "https://www.sebastian-software.de"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=6.0.0",
    "yarn": ">=1.0.0"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/effective-eslint-config.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major",
    "build": "preppy",
    "prebuild": "npm run clean",
    "clean": "rimraf dist",
    "prepack": "npm run build",
    "prelint": "npm run build",
    "lint": "run-s \"lint:* {@}\" --",
    "lint:script": "eslint --fix '**/*.{js,jsx,ts,tsx,mjs}'",
    "lint:types": "tsc --noEmit",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,mjs,json,md}' && eslint --fix '**/*.{js,jsx,ts,tsx,mjs}'",
    "check:conflicts": "eslint --print-config . | eslint-config-prettier-check",
    "pretest": "npm run build",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "peerDependencies": {
    "eslint": ">=6.0.0",
    "prettier": ">=1.18.0",
    "typescript": ">=3.5.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "confusing-browser-globals": "^1.0.7",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-plugin-cypress": "^2.6.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.14.1",
    "eslint-plugin-jsdoc": "^15.8.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "eslint-plugin-shopify": "^30.0.1",
    "eslint-plugin-unicorn": "^10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/eslint": "^4.16.6",
    "@types/jest": "^24.0.17",
    "@types/lodash": "^4.14.136",
    "eslint": "^6.0.1",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "lodash": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "preppy": "^8.3.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "rimraf": "^2.6.3",
    "typescript": "^3.5.3"
  }
}
